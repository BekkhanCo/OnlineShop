<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CategoryItem.MahsulotActivity">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="200dp"
                android:src="@mipmap/photo3"
                android:scaleType="fitCenter"
                android:id="@+id/rasmmahsulotoyna"
                android:layout_margin="10dp"
                android:layout_gravity="center_horizontal"

                />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="27dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="15dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tovarmahoyna"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:layout_marginStart="10dp"
                    android:text="Tovar nomi"
                    android:textColor="#5a5a5a"
                    android:textSize="20sp" />

            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3 200 000 so`m"
                android:textSize="20sp"
                android:layout_marginTop="15dp"
                android:layout_gravity="center"
                android:id="@+id/narxmahoyna"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:layout_marginTop="20dp"
                >

                <Button
                    android:layout_width="41dp"
                    android:layout_height="50dp"
                    android:text="-"
                    android:textAlignment="center"
                    android:textSize="20sp"
                    android:layout_marginStart="20dp"
                    android:id="@+id/btnminus"
                    android:background="@drawable/plus_button"
                    android:textColor="#ffff"/>
                <EditText
                    android:layout_width="41dp"
                    android:layout_height="50dp"
                    android:id="@+id/summahsoni"
                    android:fadeScrollbars="false"
                    android:contextClickable="false"
                    android:keyboardNavigationCluster="true"
                    />
                <Button
                    android:layout_width="41dp"
                    android:layout_height="50dp"
                    android:text="+"
                    android:textAlignment="center"
                    android:textSize="20sp"
                    android:id="@+id/btnplus"
                    android:background="@drawable/plus_button"
                    android:textColor="#ffff"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="7 400 000 so`m"
                    android:textSize="25sp"
                    android:layout_marginStart="25dp"
                    android:id="@+id/umumiysumma"/>


            </LinearLayout>
            <Button
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="Korzinkaga qo`shish"
                android:layout_margin="15dp"
                android:id="@+id/btnkorzinagaqosh"
                android:background="@drawable/korzina_button"
                android:textColor="#ffff"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#000"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclikemah"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp" />

        </LinearLayout>
    </ScrollView>

</LinearLayout>