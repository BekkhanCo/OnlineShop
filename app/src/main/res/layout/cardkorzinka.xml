<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_margin="10dp"
        android:layout_height="110dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="65dp"
                android:layout_height="match_parent"
                android:src="@mipmap/korzina"
                android:layout_margin="5dp"
                android:id="@+id/rasmkorzina"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:layout_width="200dp"
                    android:layout_height="25dp"
                    android:text="Mahsulotni to`liq nomi"
                    android:layout_margin="10dp"
                    android:textSize="18sp"
                    android:id="@+id/nomikorzina"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1 000 000"
                    android:layout_marginStart="10dp"
                    android:id="@+id/narxikorzina"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:text="10 000 000"
                        android:textSize="15sp"
                        android:textColor="#5a5a5a"
                        android:layout_margin="10dp"
                        android:id="@+id/summakorzina"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginStart="30dp"
                        >

                        <Button
                            android:layout_width="40dp"
                            android:layout_height="match_parent"
                            android:layout_margin="2dp"
                            android:text="-"
                            android:textSize="30sp"
                            android:id="@+id/btnminuskorzina"
                            android:background="@drawable/plus_button"
                            android:textColor="#FFFFFF"
                            />
                        <TextView
                            android:layout_width="35dp"
                            android:layout_height="match_parent"
                            android:layout_margin="2dp"
                            android:text="11"
                            android:textSize="30sp"
                            android:textAlignment="center"
                            android:id="@+id/mohsulotsonikorzina"/>

                        <Button
                            android:id="@+id/btnpluskorzina"
                            android:layout_width="40dp"
                            android:layout_height="match_parent"
                            android:layout_margin="2dp"
                            android:background="@drawable/plus_button"
                            android:text="+"
                            android:textColor="#FFFFFF"
                            android:textSize="30sp" />


                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>


        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>